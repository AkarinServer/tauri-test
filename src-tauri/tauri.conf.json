{
  "version": "0.1.0",
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "bundle": {
    "active": true,
    "longDescription": "RV Verge - Clash Verge Rev lightweight version for RISC-V",
    "icon": ["icons/icon.png"],
    "resources": [],
    "publisher": "RV Verge",
    "externalBin": [],
    "copyright": "GNU General Public License v3.0",
    "category": "DeveloperTool",
    "shortDescription": "RV Verge",
    "createUpdaterArtifacts": false
  },
  "build": {
    "beforeBuildCommand": "npm run web:build",
    "frontendDist": "../dist",
    "beforeDevCommand": "npm run web:dev",
    "devUrl": "http://localhost:5173/"
  },
  "productName": "RV Verge",
  "identifier": "io.github.rv-verge.rv-verge",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["rv-verge"]
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "RV Verge",
        "url": "/",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": ["desktop-capability"],
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"],
          "requireLiteralLeadingDot": false
        }
      },
      "csp": null
    }
  }
}
